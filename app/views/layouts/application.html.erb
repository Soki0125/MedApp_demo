<!DOCTYPE html>
<html>
  <head>
    <title>TweetApp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <header>
      <div class="header-logo">
        <%= link_to("MedApp", "/") %>
      </div>
      <ul class="header-menus">
        <li>
          <%= link_to("MedAppとは", "/about") %>
        </li>
        <li>
          <%= link_to("瞑想記録一覧", "/posts/index") %>
        </li>
        <li>
          <%= link_to("瞑想新規記録", "/posts/new") %>
        </li>
      </ul>
    </header>
    <% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
    <% end %>
    <%= yield %>
  </body>
</html>
